{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "semicolon": [
            true,
            "never"
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "interface-name": false,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "no-empty": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    },
    "linterOptions": {
        "exclude": [
            "node_modules",
            "dist",
            "build"
        ]
    }
}