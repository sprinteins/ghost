{
    "extends": "tslint:recommended",
    "rules": {
        "no-unused-expression-chai": true,
        "max-line-length": {
            "options": [
                120
            ]
        },
        "semicolon": [
            true,
            "never"
        ],
        "array-type": [
            true,
            "array"
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "interface-name": false,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "no-empty": false,
        "object-literal-sort-keys": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "public-instance-field",
                    "private-static-field",
                    "private-instance-field",
                    "public-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ]
    },
    "rulesDirectory": [
        "tslint-no-unused-expression-chai"
    ],
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    },
    "linterOptions": {
        "exclude": [
            "node_modules",
            "dist",
            "build"
        ]
    }
}