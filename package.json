{
  "name": "ghost",
  "version": "2.0.0",
  "description": "Ghost",
  "author": "Tam√°s Rusz<t.rusz@sprinteins.com>",
  "main": "dist/main.js",
  "scripts": {
    "dev": "scripts/dev.sh",
    "dev-watchers": "concurrently -k -n TSC,FE,BE, \"yarn electron-tsc\" \"yarn parcel-dev\" \"yarn electron-dev\"",
    "parcel-dev": "parcel ./src/frontend/index.html",
    "electron-dev": "ELECTRON_START_URL=http://localhost:1234 electron ./dist/main.js",
    "electron-tsc": "tsc -w",
    "tsc": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "fix": "tslint --fix --config tslint.json --project .",
    "start": "electron .",
    "build-fe": "parcel build ./src/frontend/index.html -d dist/frontend --public-url ./",
    "build-be": "tsc --outDir dist",
    "pack": "electron-builder --dir",
    "build": "yarn build-be && yarn build-fe && electron-builder",
    "_postinstall": "electron-builder install-app-deps",
    "spec": "scripts/spec.sh"
  },
  "build": {
    "appId": "com.sprinteins.ghost",
    "mac": {
      "darkModeSupport": false
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  },
  "keywords": [
    "parcel",
    "react"
  ],
  "contributors": [],
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.9.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.40",
    "@types/lodash": "^4.14.149",
    "lodash": "^4.17.15",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "typescript-tslint-plugin": "^0.5.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.8",
    "@types/mocha": "^7.0.1",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "chai": "^4.2.0",
    "concurrently": "^5.0.2",
    "electron": "^9.0.0",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.2.0",
    "electron-reload": "^1.5.0",
    "mocha": "^7.0.1",
    "parcel-bundler": "^1.12.4",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.9.3"
  }
}
